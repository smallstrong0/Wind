<view class="page">
    <view class="page__hd">
        <view class="page__title">会员服务</view>
        <view class="page__desc">vip service</view>
    </view>
    <view class="page__bd">
        <view class="weui-grids">
            <block wx:for="{{grids}}" wx:key="money">
                <view bindtap="vip" data-money="{{item.money}}" class="weui-grid" hover-class="weui-grid_active">
                    <image class="weui-grid__icon" src="../../images/vip_icon.png"/>
                    <view class="weui-grid__label">{{item.text}}</view>
                </view>
            </block>
        </view>
    </view>
</view>